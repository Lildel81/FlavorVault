<div class="jumbotron">
    <div class="row">
        <div class="col-8">
            <h1 class="font-weight-bold"><%= recipe.Title %></h1>
            <img src="<%- recipe.Image %>" size="20%">
            <p class="lead">Are you sure you want to delete this recipe??</p>
            <p class="lead">
                <form action="/deleteRecipe/<%= recipe._id%>" method="post">
                    <button class="btn btn-danger btn-lg" type="submit">Delete</button>
                    <a class="btn btn-light btn-lg" href="/">Cancel</a>
                </form>
            </p>
        </div>
        <div class="col-4">
            <h1 class="font-weight-bolder text-danger float-right">
                <i class="fa fa-trash"></i>
            </h1>
        </div>
    </div>
</div>